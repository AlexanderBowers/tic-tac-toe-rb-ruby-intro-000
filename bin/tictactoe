#!/usr/bin/env ruby
input = 0
WIN_COMBINATIONS =
 [
  [0, 1, 2],
  [3, 4, 5],
  [6, 7, 8],
  [0, 3, 6],
  [1, 4, 7],
  [2, 5, 8],
  [0, 4, 8],
  [2, 4, 6]
]

require_relative '../lib/tic_tac_toe'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
display_board(board)
greeting(input)
input_to_index(input)
turn(board)
position_taken?(board, index)
current_player(board)
valid_range?(index)
valid_move?(board, index)
move(board, index, character = "X")
turn(board)
turn_count(board)
play(board)
won?(board)
full?(board)
draw?(board)
over?(board)
winner(board)
